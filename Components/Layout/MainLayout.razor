@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        Event Streams DemoApp
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="https://www.ibm.com/products/event-automation" target="_blank">IBM Event Automation DemoApp</a>
        <FluentSpacer />
        @copyRight
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private string copyRight = $"Copyright © {DateTime.Now.Year} - Roni Kurniawan";
}